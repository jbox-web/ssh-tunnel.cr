<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.10.3 -->
<interface>
  <!-- interface-name ssh-tunnel.ui -->
  <requires lib="gtk" version="4.6"/>
  <template class="SSHTunnel-UI-Windows-ApplicationWindow" parent="GtkApplicationWindow">
    <property name="default-height">600</property>
    <property name="default-width">1200</property>
    <property name="show-menubar">True</property>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="halign">baseline</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkScrolledWindow" id="scrolled_window.hosts">
            <property name="vexpand">True</property>
          </object>
        </child>
        <child>
          <object class="GtkStatusbar" id="status_bar">
            <property name="opacity">0.9</property>
            <child>
              <object class="GtkButton" id="button.host.new">
                <property name="halign">end</property>
                <property name="icon-name">list-add-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="button.host.edit">
                <property name="halign">end</property>
                <property name="icon-name">document-edit-symbolic</property>
                <property name="margin-end">40</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="button.host.delete">
                <property name="halign">end</property>
                <property name="icon-name">app-remove-symbolic</property>
                <property name="margin-end">80</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
